<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen"
    android:orientation="vertical"
    tools:context=".StoryPlay.StoryPlayActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@null"
        android:minHeight="?android:attr/actionBarSize"
        android:padding="10dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="323dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="381dp"
            android:layout_height="323dp"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="381dp"
            android:layout_height="323dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/main_1" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16.5dp">

        <RelativeLayout
            android:layout_width="310dp"
            android:layout_height="220dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="89dp"
                android:layout_height="29dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="11dp"
                android:layout_weight="1"
                android:background="@drawable/namebar"
                android:fontFamily="@font/gulim070"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#6591d1"
                android:textSize="14sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/content"
                android:layout_width="327dp"
                android:layout_height="194dp"
                android:layout_below="@id/textView"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-4dp"
                android:background="@drawable/storybar2"
                android:fontFamily="@font/gulim030"
                android:lineSpacingExtra="5dip"
                android:onClick="onClick"
                android:paddingBottom="18dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="18dp"
                android:text="이야기"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/playStoryTouchTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/content"
                android:layout_alignRight="@+id/content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/gulim050"
                android:onClick="onClick"
                android:text="터치하여 다음 이야기로 >>"
                android:textColor="#fff"
                android:textSize="12sp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>