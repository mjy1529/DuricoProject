<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_over_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:background="@drawable/screen"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/screen_2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/placeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/gulim070"
            android:gravity="center_vertical|center_horizontal|center"
            android:lineSpacingExtra="-5.5sp"
            android:textAlignment="center"
            android:textColor="#5186a7"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp" />

        <TextView
            android:id="@+id/title1"
            android:layout_width="321dp"
            android:layout_height="36dp"
            android:background="@drawable/line_1"
            android:fontFamily="@font/gulim070"
            android:gravity="left"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:text="상세설명"
            android:textColor="#5186a7"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/gulim030"
            android:gravity="left"
            android:lineSpacingExtra="8sp"
            android:textColor="#7c9bb1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="321dp"
            android:layout_height="36dp"
            android:background="@drawable/line_1"
            android:fontFamily="@font/gulim070"
            android:gravity="left"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:text="이용안내"
            android:textColor="#5186a7"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/useInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/gulim030"
            android:gravity="left"
            android:lineSpacingExtra="8sp"
            android:textColor="#7c9bb1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/title3"
            android:layout_width="321dp"
            android:layout_height="36dp"
            android:background="@drawable/line_1"
            android:fontFamily="@font/gulim070"
            android:gravity="left"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:text="지도"
            android:textColor="#5186a7"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/map_view"
            android:layout_width="210dp"
            android:layout_height="129dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>
</ScrollView>